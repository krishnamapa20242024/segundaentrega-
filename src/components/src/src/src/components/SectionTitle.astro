---
interface Props {
    title: string;
    subtitle: string;
    borderColor?: string;
}
const { title, subtitle, borderColor = 'border-gray-200' } = Astro.props;
---
<div class:list={["mb-8 pb-4 border-b", borderColor]}>
    <h2 class="text-3xl font-bold text-gray-900 mb-2">{title}</h2>
    <p class="text-lg text-gray-600">{subtitle}</p>
</div>