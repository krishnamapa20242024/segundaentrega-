                        <label for="c-name" class="block text-sm font-medium text-gray-700">Tu Nombre</label>
                        <input type="text" id="c-name" name="name" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3 focus:ring-red-500 focus:border-red-500">
                    </div>
                    <div class="mb-6">
                        <label for="c-message" class="block text-sm font-medium text-gray-700">Tu Mensaje</label>
                        <textarea id="c-message" name="message" rows="4" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-3 focus:ring-red-500 focus:border-red-500"></textarea>
                    </div>
                    <button type="submit" class="w-full inline-flex justify-center py-3 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 transition duration-150">
                        Enviar Mensaje
                    </button>
                </form>
            </div>
        </div>
    </section>

</BaseLayout>
